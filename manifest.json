    {
        "manifest_version": 2,
        "name": "Angular 5 extension",
        "description": "Sync with Couchbase in a Google Chrome extension",
        "version": "1.0",
        "browser_action": {
            "default_icon": "icon.png",
            "default_popup": "index.html"
        },
        "permissions": [
            "notifications",
            "downloads",
            "background",
            "declarativeContent",
            "storage",
            "cookies",  
            "tabs",
            "http://*/*",
            "https://*/*",
            "tabs",
            "bookmarks",
            "http://*.google.com/",
            "unlimitedStorage",
            "*://*.force.com/*",
            "*://*.google.com/*"
        ],
        "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
        "web_accessible_resources": [
            "assets/css/*",
            "assets/js/*",
            "assets/fonts/*"
        ]
    }